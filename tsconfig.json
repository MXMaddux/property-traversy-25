{
  "compilerOptions": {
    "target": "ES2017", // Modern JavaScript target (compatible with Node.js and browsers)
    "lib": ["dom", "dom.iterable", "esnext"], // Required libraries for DOM and modern JS features
    "allowJs": true, // Allow JavaScript files to be included in the project
    "skipLibCheck": true, // Skip type checking of declaration files (improves build speed)
    "strict": true, // Enable strict type-checking options
    "noEmit": true, // Do not emit compiled files (handled by Next.js)
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "module": "esnext", // Use ES modules syntax
    "moduleResolution": "bundler", // Use bundler module resolution (compatible with Next.js 13+)
    "resolveJsonModule": true, // Allow importing JSON files

    "isolatedModules": true, // Ensure each file is treated as a separate module
    "jsx": "preserve", // Preserve JSX for Next.js to handle (important for React components)
    "incremental": true, // Enable incremental compilation for faster builds
    "plugins": [
      {
        "name": "next" // Use Next.js-specific TypeScript plugin
      }
    ],
    "paths": {
      "@/*": ["./*"] // Alias for absolute imports
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ], // Include TypeScript and Next.js environment files
  "exclude": ["node_modules"] // Exclude `node_modules` from type checking
}
